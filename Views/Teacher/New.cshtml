
@{
    ViewBag.Title = "New";
}

<h2>New Teacher</h2>

<form method="post" action="/Teacher/Create">
    <div>
        <label>First Name: </label>
        <input type="text" name="Teacher_fname" id="Teacher_fname" />
    </div>
    <div>
        <label>Last Name: </label>
        <input type="text" name="Teacher_lname" id="Teacher_lname" />
    </div>
    <div>
        <label>Employee Number: </label>
        <input type="text" name="Employee_number" id="Employee_number" />
    </div>
    <div>
        <label>Salary: </label>
        <input type="text" name="Salary" id="Salary" />
    </div>
    <div>
        <input type="submit" value="Add" />
    </div>
</form>


